<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dog"
    tools:context="com.example.tharindunilakshana.gpacalculator.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:textStyle="bold"
        android:layout_marginTop="33dp"
        android:textSize="20sp"
        android:text="Credit Of Subject"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />



    <EditText
        android:id="@+id/txtCredit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:ignore="LabelFor" />


    <EditText
        android:id="@+id/txtgradepoint"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/txtCredit"
        android:layout_alignStart="@+id/txtCredit"
        tools:ignore="LabelFor" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtgradepoint"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/txtgradepoint"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:text="Grade Point "
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/txtgradepoint"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:text="Add"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txttotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_alignEnd="@+id/txtgradepoint"
        android:layout_alignStart="@+id/txtgradepoint"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btnAdd"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Total Credits For The Semester"
        android:layout_below="@+id/btnAdd"
        android:layout_toStartOf="@+id/txtsubcredit"
        android:layout_marginTop="24dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txtsubcredit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignStart="@+id/txttotal"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btncalgpa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Calculate GPA"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView2"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_above="@+id/txtfinalgpa"
        android:layout_alignEnd="@+id/txttotal"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtfinalgpa"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Final GPA"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/btncalgpa"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="Developed By Tharindu \nUniversity Of Vocational Technology"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />
</RelativeLayout>
